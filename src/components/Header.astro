---
import ButtonHeader from "../components/ButtonHeader.astro";
---

<div x-data="{ showmenu: false, showDropdown: false }" class="z-50 w-full fixed bg-gray-950 bg-opacity-70 backdrop-blur-md shadow-lg">
  <!-- Fixed Header -->
  <div id="navbar" class="flex items-center justify-between max-w-full py-[30px] px-[15px] md:px-[60px]">
    <!-- Logo -->
    <div class="md:w-11xl w-10xl">
      <a href="/"><img src="/logo_white.png" alt="Logo" /></a>
    </div>

    <!-- Desktop Menu -->
    <div class="hidden lg:flex items-center space-x-6 ml-auto">
      <nav id="desktopmenu" class="flex font-lato items-center space-x-6">
        <a class="hover:text-orange-500 text-neutral-50" href="/">Hjem</a>
        <!-- Dropdown -->
        <li class="relative list-none" @mouseenter="showDropdown = true" @mouseleave="showDropdown = false">
          <a href="/listview" class="text-neutral-50 hover:text-orange-500 py-2 flex items-center text-base">
            Rejser
            <svg
              class="w-4 h-4 ml-2 transition-transform duration-300 transform"
              :class="{ 'rotate-180': showDropdown }"
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
            </svg>
          </a>
          <div
            x-show="showDropdown"
            x-transition
            class="absolute left-0 mt-2 w-10xl p-[5px] bg-neutral-950 border border-neutral-800 rounded-[0.5rem] shadow-lg z-10"
          >
            <ul>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]">
                  Caribien, Hawaii & Mexico</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]">
                  Costa rica, Mexico & Colombia</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Australien, NZ, Bali & Gili Islands</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Australien, Japan, Bali & Gili Islands</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Hawaii, Australien, Japan, Bali & Gili Islands</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Brasilien, Bolivia, Colombia, Ecuador, Peru & Argentina</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Costa Rica, Mexico & Colombia</a
                >
              </li>
              <li>
                <a href="/singleview" class="block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Indien, Nepal, Thailand, Vietnam & Sri Lanka</a
                >
              </li>
              <li>
                <a
                  href="/singleview"
                  class="rounded-y-sm block py-xxs px-xxxs text-neutral-50 hover:text-orange-500 hover:bg-neutral-900 rounded-[0.5rem]"
                  >Bali, Lombok & Gili (sommerh√∏jskole)</a
                >
              </li>
            </ul>
          </div>
        </li>
      </nav>
      <a href="/tilmeld"><ButtonHeader variant="primary" size="small">Tilmeld</ButtonHeader></a>
    </div>

    <!-- Burger Menu Button -->
    <button id="burgermenu" class="lg:hidden text-neutral-50" @click="showmenu = !showmenu">
      <template x-if="!showmenu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-7 h-7 hover:text-orange-500"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
        </svg>
      </template>
      <template x-if="showmenu">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-7 h-7 hover:text-orange-500"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </template>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav
    id="mobilmenu"
    x-show="showmenu"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 transform scale-95"
    x-transition:enter-end="opacity-100 transform scale-100"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 transform scale-100"
    x-transition:leave-end="opacity-0 transform scale-95"
    class="lg:hidden flex flex-col items-center shadow-lg rounded-md p-4 space-y-4"
  >
    <a class="text-neutral-50 hover:text-orange-500 py-2" href="/">Hjem</a>
    <a class="text-neutral-50 hover:text-orange-500 py-2" href="/listview">Rejser</a>
    <a href="/tilmeld"><ButtonHeader variant="primary" size="small">Tilmeld</ButtonHeader></a>
  </nav>
</div>
